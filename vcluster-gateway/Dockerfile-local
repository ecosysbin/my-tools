ENV GOPROXY  https://goproxy.cn,direct

RUN wget http://harbor.zetyun.cn:9000/aidc/helm && \
    chmod +x helm && \
    mv helm /usr/local/bin/helm

COPY charts/vcluster-k8s charts/vcluster-k8s

