FROM harbor.zetyun.cn/gcp/ubuntu-tini:22.04

COPY --from=builder /workspace/vcluster-gateway .
COPY --from=builder /workspace/hack ./hack
COPY --from=builder /usr/local/bin/helm /usr/local/bin/helm
